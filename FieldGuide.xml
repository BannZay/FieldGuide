<Ui>
    <Button name="FieldGuideSpellButtonTemplate" virtual="true">
        <Size>
            <AbsDimension x="37" y="37" />
        </Size>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackground" file="Interface/Addons/FieldGuide/Media/Buttons/SpellBackground">
                    <Size>
                        <AbsDimension x="64" y="64" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="-3" y="3" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
                FieldGuideSpellButton_OnEnter(self)
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide()
            </OnLeave>
        </Scripts>
        <HighlightTexture name="$parentHighlight" file="Interface/Addons/FieldGuide/Media/Buttons/SpellHighlight" alphaMode="ADD" />
    </Button>
    <FontString name="FieldGuideLevelStringTemplate" font="Fonts/FRIZQT__.ttf" outline="NORMAL" justifyH="LEFT" virtual="true">
        <Shadow>
          <Color a="1" r="0" g="0" b="0" />
          <Offset x="1" y="-1" />
        </Shadow>
        <FontHeight>
            <AbsValue val="16" />
        </FontHeight>
    </FontString>
    <FontString name="FieldGuideCostStringTemplate" font="Fonts/ARIALN.ttf" outline="NORMAL" justifyH="LEFT" virtual="true">
        <Shadow>
          <Color a="0.5" r="0" g="0" b="0" />
          <Offset x="1" y="-1" />
        </Shadow>
        <FontHeight>
            <AbsValue val="20" />
        </FontHeight>
    </FontString>
    <Frame name="FieldGuideFrame" parent="UIParent" enableMouse="true" movable="true" clampedToScreen="true">
        <Size x="680" y="500" /> <!-- 725 for 14 spells etc, 680 original (13) -->
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Backdrop edgeFile="Interface/Addons/FieldGuide/Media/Background/WoodBorder">
            <EdgeSize>
                <AbsValue val="64" />
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBackgroundTexture" file="Interface/Addons/FieldGuide/Media/Background/Background">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="16" y="-16" />
                        <Anchor point="BOTTOMRIGHT" x="-16" y="16" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture name="$parentBackgroundTextureClass">
                    <Color a="0.4" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="16" y="-16" />
                        <Anchor point="BOTTOMRIGHT" x="-16" y="16" />
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="$parentLeftBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Left">
                    <Size x="16" y="450" />
                    <Anchors>
                        <ANCHOR point="TOPLEFT" x="14" y="-16" />
                        <ANCHOR point="BOTTOMLEFT" x="14" y="16" />
                    </Anchors>
                    <TexCoords left="0" right="1" top="0" bottom="0.87" />
                </Texture>
                <Texture name="$parentTopBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Top">
                    <Size x="720" y="16" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="28" y="-12" />
                        <Anchor point="TOPRIGHT" x="-28" y="-12" />
                    </Anchors>
                    <TexCoords left="0.87" right="0" top="0" bottom="1" />
                </Texture>
                <Texture name="$parentRightBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Left">
                    <Size x="16" y="450" />
                    <Anchors>
                        <ANCHOR point="TOPRIGHT" x="-13" y="-16" />
                        <ANCHOR point="BOTTOMRIGHT" x="-13" y="16" />
                    </Anchors>
                    <TexCoords left="1" right="0" top="0.87" bottom="0" />
                </Texture>
                <Texture name="$parentBottomBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Top">
                    <Size x="720" y="16" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="28" y="13" />
                        <Anchor point="BOTTOMRIGHT" x="-28" y="13" />
                    </Anchors>
                    <TexCoords left="0" right="0.87" top="1" bottom="0" />
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="1">
                <Texture name="$parentTopLeftCrenTexture" file="Interface/Addons/FieldGuide/Media/Background/WoodBorder-Corner">
                    <Size x="64" y="64" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="4" y="-2" />
                    </Anchors>
                    <TexCoords left="0" right="1" top="0" bottom="1" />
                </Texture>
                <Texture name="$parentTopRightCrenTexture" file="Interface/Addons/FieldGuide/Media/Background/WoodBorder-Corner">
                    <Size x="64" y="64" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-4" y="-2" />
                    </Anchors>
                    <TexCoords left="1" right="0" top="0" bottom="1" />
                </Texture>
                <Texture name="$parentBottomRightCrenTexture" file="Interface/Addons/FieldGuide/Media/Background/WoodBorder-Corner">
                    <Size x="64" y="64" />
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-4" y="3" />
                    </Anchors>
                    <TexCoords left="1" right="0" top="1" bottom="0" />
                </Texture>
                <Texture name="$parentBottomLeftCrenTexture" file="Interface/Addons/FieldGuide/Media/Background/WoodBorder-Corner">
                    <Size x="64" y="64" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="4" y="3" />
                    </Anchors>
                    <TexCoords left="0" right="1" top="1" bottom="0" />
                </Texture>
            </Layer>
            <Layer level="OVERLAY" textureSubLevel="2">
                <Texture name="$parentTopLeftBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Joint">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="TOPLEFT" x="9" y="-7" />
                    </Anchors>
                    <TexCoords left="1" right="0" top="1" bottom="0" />
                </Texture>
                <Texture name="$parentTopRightBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Joint">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-8" y="-7" />
                    </Anchors>
                    <TexCoords left="0" right="1" top="1" bottom="0" />
                </Texture>
                <Texture name="$parentBottomRightBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Joint">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-8" y="8" />
                    </Anchors>
                    <TexCoords left="0" right="1" top="0" bottom="1" />
                </Texture>
                <Texture name="$parentBottomLeftBorderTexture" file="Interface/Addons/FieldGuide/Media/Background/MetalBorder-Joint">
                    <Size x="32" y="32" />
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="9" y="8" />
                    </Anchors>
                    <TexCoords left="1" right="0" top="0" bottom="1" />
                </Texture>
            </Layer>
        </Layers>
        <Frames>
            <Slider name="$parentVerticalSlider" orientation="VERTICAL" minValue="0" maxValue="0" defaultValue="0" valueStep="1">
                <Size x="25" y="428" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="FieldGuideFrame" x="-23" y="-35" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="FieldGuideFrame" y="34" />
                </Anchors>
                <Scripts>
                    <OnValueChanged>
                        FieldGuide_OnVerticalValueChanged(self, value)
                    </OnValueChanged>
                </Scripts>
                <ThumbTexture name="$parentThumbTexture" file="Interface/Addons/FieldGuide/Media/Buttons/ScrollbarVertical-Knob">
                    <Size x="32" y="32" />
                </ThumbTexture>
                <Frames>
                    <Button name="$parentScrollUpButton">
                        <Size x="32" y="32" />
                        <Anchors>
                            <Anchor point="TOPRIGHT" relativeTo="FieldGuideFrame" x="-19" y="-16" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                FieldGuide_Scroll(1)
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollUpButton-Up" />
                        <PushedTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollUpButton-Down" />
                        <DisabledTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollUpButton-Disabled" />
                        <HighlightTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollUpButton-Highlight" alphaMode="ADD" />
                    </Button>
                    <Button name="$parentScrollDownButton">
                        <Size x="32" y="32" />
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeTo="FieldGuideFrame" x="-19" y="15" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                FieldGuide_Scroll(-1)
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollDownButton-Up" />
                        <PushedTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollDownButton-Down" />
                        <DisabledTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollDownButton-Disabled" />
                        <HighlightTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollDownButton-Highlight" alphaMode="ADD" />
                    </Button>
                </Frames>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentBackground" setAllPoint="true">
                            <Color a="1" r="0" g="0" b="0" />
                        </Texture>
                        <Texture name="$parentTop" file="Interface/Addons/FieldGuide/Media/Scrollbar/ScrollbarVertical">
                            <Size x="31" y="102" />
                            <Anchors>
                                <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="FieldGuideFrame" x="-20" y="-20" />
                            </Anchors>
                            <TexCoords left="0" right="0.484375" top="0" bottom="0.4"/>
                        </Texture>
                        <Texture name="$parentBottom" file="Interface/Addons/FieldGuide/Media/Scrollbar/ScrollbarVertical">
                            <Size x="31" y="106"/>
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="FieldGuideFrame" x="-20" y="21" />
                            </Anchors>
                            <TexCoords left="0.515625" right="1.0" top="0" bottom="0.4140625" />
                        </Texture>
                        <Texture name="$parentMiddle" file="Interface/Addons/FieldGuide/Media/Scrollbar/ScrollbarVertical">
                            <Size x="31" y="1" />
                            <Anchors>
                                <Anchor point="TOP" relativeTo="$parentTop" relativePoint="BOTTOM" />
                                <Anchor point="BOTTOM" relativeTo="$parentBottom" relativePoint="TOP" />
                            </Anchors>
                            <TexCoords left="0" right="0.484375" top=".75" bottom="1" />
                        </Texture>
                    </Layer>
                </Layers>
            </Slider>
            <Slider name="$parentHorizontalSlider" orientation="HORIZONTAL" minValue="0" maxValue="0" defaultValue="0" valueStep="1">
                <Size x="1" y="25" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativeTo="FieldGuideFrame" x="34" y="23" />
                    <Anchor point="BOTTOMRIGHT" relativeTo="FieldGuideFrame" y="0" x="-64" />
                </Anchors>
                <Scripts>
                    <OnValueChanged>
                        FieldGuide_OnHorizontalValueChanged(self, value)
                    </OnValueChanged>
                </Scripts>
                <ThumbTexture name="$parentThumbTexture" file="Interface/Addons/FieldGuide/Media/Buttons/ScrollbarHorizontal-Knob">
                    <Size x="32" y="32" />
                </ThumbTexture>
                <Frames>
                    <Button name="$parentScrollLeftButton">
                        <Size x="32" y="32" />
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" relativeTo="FieldGuideFrame" x="16" y="19" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                FieldGuide_Scroll(1, true)
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollLeftButton-Up" />
                        <PushedTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollLeftButton-Down" />
                        <DisabledTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollLeftButton-Disabled" />
                        <HighlightTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollLeftButton-Highlight" alphaMode="ADD" />
                    </Button>
                    <Button name="$parentScrollRightButton">
                        <Size x="32" y="32" />
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeTo="FieldGuideFrame" x="-45" y="19" />
                        </Anchors>
                        <Scripts>
                            <OnClick>
                                FieldGuide_Scroll(-1, true)
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollRightButton-Up" />
                        <PushedTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollRightButton-Down" />
                        <DisabledTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollRightButton-Disabled" />
                        <HighlightTexture file="Interface/Addons/FieldGuide/Media/Buttons/ScrollRightButton-Highlight" alphaMode="ADD" />
                    </Button>
                </Frames>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentBackground" setAllPoint="true">
                            <Color a="1" r="0" g="0" b="0" />
                        </Texture>
                        <Texture name="$parentLeft" file="Interface/Addons/FieldGuide/Media/Scrollbar/ScrollbarHorizontal">
                            <Size x="102" y="31" />
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="FieldGuideFrame" x="21" y="20" />
                            </Anchors>
                            <TexCoords left="0.58203125" right="1" top="0.515625" bottom="1" />
                        </Texture>
                        <Texture name="$parentRight" file="Interface/Addons/FieldGuide/Media/Scrollbar/ScrollbarHorizontal">
                            <Size x="102" y="31" />
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="FieldGuideFrame" x="-49" y="20" />
                            </Anchors>
                            <TexCoords left="0.6" right="1" top="0" bottom="0.484375" />
                        </Texture>
                        <Texture name="$parentMiddle" file="Interface/Addons/FieldGuide/Media/Scrollbar/ScrollbarHorizontal">
                            <Size x="1" y="31" />
                            <Anchors>
                                <Anchor point="LEFT" relativeTo="$parentLeft" relativePoint="RIGHT" />
                                <Anchor point="RIGHT" relativeTo="$parentRight" relativePoint="LEFT" />
                            </Anchors>
                            <TexCoords left="0" right="0.25" top="0" bottom="0.484375" />
                        </Texture>
                    </Layer>
                </Layers>
            </Slider>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="3" y="4" />
                </Anchors>
            </Button>
            <CheckButton name="$parentTalentsCheckBox" inherits="UICheckButtonTemplate">
                <Scripts>
                    <OnClick>
                        FieldGuide_ToggleButtons(1)
                    </OnClick>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentEnemySpellsCheckBox" inherits="UICheckButtonTemplate">
                <Scripts>
                    <OnClick>
                        FieldGuide_ToggleButtons(2)
                    </OnClick>
                </Scripts>
            </CheckButton>
            <CheckButton name="$parentKnownSpellsCheckBox" inherits="UICheckButtonTemplate">
                <Scripts>
                    <OnClick>
                        FieldGuide_ToggleButtons(3)
                    </OnClick>
                </Scripts>
            </CheckButton>
            <Frame name="FieldGuideDropdownFrame" inherits="UIDropDownMenuTemplate" frameStrata="MEDIUM">
            <Anchors>
                    <Anchor point="TOPRIGHT" x="-40" y="-26"/>
                </Anchors>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                FieldGuide_OnLoad(self)
            </OnLoad>
            <OnShow>
                PlaySound(SOUNDKIT.IG_SPELLBOOK_OPEN)
            </OnShow>
            <OnHide>
                PlaySound(SOUNDKIT.IG_SPELLBOOK_CLOSE)
            </OnHide>
            <OnDragStart>
                self:StartMoving()
            </OnDragStart>
            <OnDragStop>
                self:StopMovingOrSizing()
            </OnDragStop>
            <OnMouseWheel>
                FieldGuide_Scroll(delta)
            </OnMouseWheel>
            <OnEvent>
                FieldGuide_OnEvent(self, event, ...)
            </OnEvent>
        </Scripts>
    </Frame>
</Ui>